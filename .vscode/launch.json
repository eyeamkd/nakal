{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Next.js: Debug",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "port": 9229,
        "skipFiles": ["<node_internals>/**"],
        "console": "integratedTerminal"
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Next.js: Attach",
        "port": 9229,
        "restart": true,
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }